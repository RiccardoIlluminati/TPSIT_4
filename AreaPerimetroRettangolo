package areaperimetrorettangolo;
import java.util.Scanner;
/**
 *
 * @author Studente
 */
public class AreaPerimetroRettangolo {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
            Scanner input = new Scanner(System.in);
            int base;
            do{
            System.out.println("Inserisci la base maggiore di 0.");
            base = input.nextInt();
            }
            while(base<=0);
            
            int altezza;
            do{
            System.out.println("Inserisci l'altezza maggiore di 0.");
            altezza = input.nextInt();
            }
            while(altezza<=0);
            
            int area=base*altezza;
            System.out.println("Area="+area);
            
            int perimetro=(base+altezza)*2;
            System.out.println("Perimetro="+perimetro);
    
    }
    
}
